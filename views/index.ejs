<%- include('./partials/header.ejs') %>

    <div class="container-fluid home-landing">
        <div class="row landing-wrapper">
            <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center mb-5">
                <div class="landing-logo">
                    <img src="/images/logo.png" class="img-fluid" alt="landing-logo">
                </div>
                <h1 class="landing-name mt-4">Confuse</h1>
                <span class="landing-text mt-4 text-center mb-5">
                    An eCommerce platform for selling, buying and shipping.
                    <br><br>
                    Experience a refined online marketplace tailored to your needs.
                </span>
            </div>

            <div class="col d-flex align-items-center">
                <div id="carouselExampleAutoplaying" class="carousel slide d-none d-md-block" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/pexels-cottonbro-studio.jpg" class="img-fluid d-block w-100 rounded"
                                alt="carousel-img-1">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/pexels-karolina-grabowska.jpg" class="img-fluid d-block w-100 rounded"
                                alt="carousel-img-2">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/pexels-karolina-grabowska-cart.jpg"
                                class="img-fluid d-block w-100 rounded" alt="carousel-img-3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

