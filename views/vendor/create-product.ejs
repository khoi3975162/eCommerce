<%- include('../partials/header.ejs') %>

    <div class="container product-add rounded shadow-sm">
        <div class="product-box">
            <form method="POST" action="/product/new" enctype="multipart/form-data" class="add-pd-form">
                <div class="row">
                    <div class="col product-img mb-4">
                        <div class="row">
                            <img id="frame" class="col-6 img-fluid h-100 add-pd-img" src="/images/products/default.png"
                                alt="add-pd-img">
                            <img id="frame" class="col-6 img-fluid h-100 add-pd-img" src="/images/products/default.png"
                                alt="add-pd-img">
                        </div>
                        <div class="row">
                            <img id="frame" class="col-6 img-fluid h-100 add-pd-img" src="/images/products/default.png"
                                alt="add-pd-img">
                            <img id="frame" class="col-6 img-fluid h-100 add-pd-img" src="/images/products/default.png"
                                alt="add-pd-img">
                        </div>
                        <div class="row">
                            <label for="formFileMultiple" class="form-label">Upload images</label>
                            <input class="form-control" id="formFile" name="product-imgs" type="file"
                                id="formFileMultiple" onchange="previewImgs()" multiple>
                            <button type="button" onclick="clearImages()" class="btn btn-primary mt-3 rm-imgs">Remove
                                all images</button>
                        </div>
                    </div>
                    <div class="col product-info mb-4 d-flex flex-column justify-content-center">
                        <input type="text" id="product-name" name="product-name" class="form-control mb-4 product-name"
                            placeholder="Product Name" required />
                        <input type="number" step="any" id="product-price" name="product-price"
                            class="form-control mb-4 product-price" placeholder="Product Price" required />
                        <button type="button" class="btn anm-btn add-pd-btn" onclick="addProductCheck()"><span>Add
                                product</span></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col product-desciption-div">
                        <label for="exampleFormControlTextarea1" class="form-label">Product's description</label>
                        <textarea class="form-control product-desciption" name="product-desciption"
                            id="exampleFormControlTextarea1" rows="10"></textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>